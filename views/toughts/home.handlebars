<div class="home-header">
    {{#if search}}
    <h1>Voce está buscando por <span>{{search}}</span></h1>
    {{#if toughtsQty}}
        <p>Foram encontrados <span>{{toughtsQty}}</span> resultados para {{search}}</p>
    {{else}}
        <p>Nenhum resultado encontrado para o termo <span>{{search}}</span></p>
        {{/if}}
    {{else}}
<h1>Todos os pensamentos</h1>
    {{/if}}
<form action="/" method="get">
    <input type="text" name="search" placeholder="Está buscando por algo?">
    <button type="submiut" class="btn" value="buscar">buscar</button>
</form>
<div class="order-container">
    <span>Odernar por: </span>
    <form action="/" method="get">
    <input type="hidden" name="search" value="{{this.search}}">
    <input type="hidden" name="order" value="new">
    <button type="submit">
        <i class="bi bi-arrow-up"></i>
    </button>
    </form>

    <form>
     <input type="hidden" name="search" value="{{this.search}}">
    <input type="hidden" name="order" value="old">
    <button type="submit">
        <i class="bi bi-arrow-down"></i>
    </button>
    </form>
    <a href="/">limpar</a>
</div>
<div class="toughts-container">
    {{#each toughts}}
        <figure>
            <blockquote>
                "{{this.title}}"
            </blockquote>
            <figcaption>por <span>{{this.User.name}}</span></figcaption>
        </figure>
    {{/each}}
</div>
</div>